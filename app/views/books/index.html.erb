<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>  <!-- 右側方向に3行確保（リンクのため） -->
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        
        <td>
          <%= link_to 'Show', book_path(book.id) %>
        </td>
        <td>
          <%= link_to 'Edit', edit_book_path(book.id) %>
        </td>
        <td>
          <%= link_to 'Destroy',
          book_path(book.id), 
          method: :delete,
          data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>
